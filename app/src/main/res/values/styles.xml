<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SSUPartyTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="CreatePartyBtnTheme" parent="@android:style/Widget.Button">
        <item name="android:layout_width">@dimen/createactivity_button_width</item>
        <item name="android:layout_height">@dimen/createactivity_button_height</item>
        <item name="android:layout_margin">@dimen/createactivity_button_margin</item>
        <item name="android:textColor">#46B8FF</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">#00FF0000</item>
    </style>

    <style name="CreatePartyEditTextTheme" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/createactivity_content_height</item>
        <item name="android:layout_marginTop">@dimen/createactivity_button_margin</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#828282</item>
        <item name="android:textSize">@dimen/createactivity_content_textsize</item>
        <item name="android:paddingTop">@dimen/createactivity_hint_marginTop</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#000000</item>
        <item name="android:textSize">25dp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#000000</item>
        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">#000000</item>
    </style>

    <style name="TextLabel2" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/createactivity_hint_TextSize</item>
        <item name="android:textColor">#bcb5e1</item>
    </style>

    <declare-styleable name="CustomTextView">
        <attr name="customFont" format="string" />
    </declare-styleable>


    <style name="SSUPartyTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SSUPartyTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
