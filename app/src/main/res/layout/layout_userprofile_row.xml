<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="57dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/userprofile_image"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/man" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/userprofile_nick_indicate_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="닉네임"
            android:textColor="@color/secondaryTextPrimary"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/userprofile_carrer_indicate_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userprofile_nick_indicate_txt"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:text="경력사항"
            android:textColor="@color/secondaryTextPrimary"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/userprofile_school_indicate_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userprofile_carrer_indicate_txt"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:text="학력사항"
            android:textColor="@color/secondaryTextPrimary"
            android:textSize="10sp" />

    </RelativeLayout>
</LinearLayout>