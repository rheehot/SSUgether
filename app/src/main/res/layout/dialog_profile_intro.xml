<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp">

        <TextView
            android:id="@+id/intro_dialog_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="소개 입력!"
            android:textSize="16sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/intro_dialog_content_edit"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/intro_dialog_title_txt"
            android:layout_margin="5dp"
            android:background="@null"
            android:gravity="top" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/intro_dialog_content_edit"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/intro_dialog_cancel_btn"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:text="취소"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/intro_dialog_done_btn"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="확인"
                android:background="@android:color/transparent"/>

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
