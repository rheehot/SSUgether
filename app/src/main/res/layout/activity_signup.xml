<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f5f6"
    tools:context="org.collapsed.ssuparty_android.ui.signup.SignupActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/signup_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#a15ffb">

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/signup_toolbar"
        android:layout_marginBottom="38dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="48dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/signup_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/signup_progress_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/planet"
                android:text="회원가입이 0% 완료되었습니다" />

            <ProgressBar
                android:id="@+id/signup_progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:layout_marginTop="10dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="20" />

            <LinearLayout
                android:id="@+id/signup_complete_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="14dp"
                android:visibility="gone">
                
                <CheckBox
                    android:id="@+id/signup_private_agree_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="개인정보 활용 수집 및 활용 동의"/>
                
                <Button
                    android:id="@+id/signup_submit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가입완료"
                    android:textColor="@color/colorWhite"
                    android:backgroundTint="#825df8"
                    android:layout_gravity="right"/>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
