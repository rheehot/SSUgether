<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/party_item_root_layout"
    android:layout_width="match_parent"
    android:layout_height="91dp"
    android:orientation="vertical"
    tools:context="org.collapsed.ssuparty_android.ui.main.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/party_item_top_layout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/party_item_category_txt"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:text="공모전"
                android:textSize="15sp"
                android:textColor="#493169"/>

            <TextView
                android:id="@+id/party_item_deadline_txt"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/party_item_category_txt"
                android:layout_marginRight="15dp"
                android:text="D - 28"
                android:textColor="#703a7f"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/party_item_tag_txt"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/party_item_deadline_txt"
                android:text="태그"
                android:textSize="15sp"
                android:textColor="#ba88c8"/>

            <TextView
                android:id="@+id/party_item_member_num_txt"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:text="5/10"
                android:textColor="#969599"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/party_item_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/party_item_top_layout"
            android:layout_marginBottom="15dp"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/party_item_title_txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="공모전타이틀"
                android:textSize="25sp" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#828282"/>

</LinearLayout>
